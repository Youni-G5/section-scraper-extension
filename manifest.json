{
  "manifest_version": 3,
  "name": "Section Scraper for Shopify",
  "version": "1.3.0",
  "description": "Extrait des sections web complètes (HTML, CSS, JS) pour les intégrer dans Shopify",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}